# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=your_db_name
DEFAULT_DB=postgres

# Application Configuration
PORT=3001
NODE_ENV=development

# Security Configuration
# For RS256, use private key path or content
JWT_PRIVATE_KEY=your_private_key_here
JWT_PUBLIC_KEY=your_public_key_here
JWT_ALGORITHM=RS256
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
CSRF_SECRET=your_csrf_secret_here
COOKIE_SECRET=your_cookie_secret_here
ALLOWED_ORIGINS=http://localhost:3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=momento:
REDIS_TOKEN_BLACKLIST_PREFIX=blacklist:

# Firebase Configuration
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email@example.com
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Security Headers
ENABLE_CORS=true
TRUST_PROXY=1

# Notification Settings
NOTIFICATION_CLEANUP_DAYS=30
TIMEZONE_DEFAULT=UTC

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

FACEBOOK_CLIENT_ID=your_facebook_client_id
